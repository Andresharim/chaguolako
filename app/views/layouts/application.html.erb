<!DOCTYPE html>
<html>
<head>
  <title>ChaguoLako</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= link_to image_tag("/assets/nds_logo.jpg"), root_path, :class => "logo" %>
	<h1>Chaguo Lako</h1>
	
	<% if user_is_logged_in? %>
		<%= link_to "Log-out #{session[:user].username}", log_out_path %>
		<%= link_to "View Polls", polls_path %>
	<% end %>
	
	<% if admin_is_logged_in? %>
		<%= link_to "View Voters", voters_path %>		
	<% end %>
	
	<hr/>

    <%= yield %>

</body>
</html>
